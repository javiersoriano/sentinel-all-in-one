                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspace": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "workspace-location": {
                        "value": "[parameters('location')]"
                    },
                    "workbook1-name": {
                        "value": "Azure AD Audit logs"
                    },
                    "workbook2-name": {
                        "value": "Azure AD Sign-in logs"
                    }
                }
            }
        },
